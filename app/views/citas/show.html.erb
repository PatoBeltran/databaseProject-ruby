<div class="row">
  <div class="col-12 text-center pepito3">
    <h2>Detalles de la cita</h2>
    <div class="row">
      <% if is_doctor %>
        <p class="col-12">
        <%= link_to "Editar", edit_cita_path(@cita) %>
        </p>
      <% end %>
      <div class="col-3 text-center pepito2">
          <%= @todo.nombre %> <%= @todo.apellido %>
      </div>
      <div class="col-3 text-center pepito2">
        Fecha: <%= @cita.fecha %>
      </div>
      <div class="col-2 text-center pepito2">
        Edad: <%= @cita.edad_actual %>
      </div>
      <div class="col-2 text-center pepito2">
        Peso: <%= @cita.peso_actual %>
      </div>
      <div class="col-2 text-center pepito2">
        Altura: <%= @cita.altura_actual %>
      </div>
      <div class="col-12 text-center pepito2">
        <h4>Comentarios</h4>
        <p> <%= @cita.comentario %> </p>
      </div>
      <div class="row">
        <div class="col-12 text-center pepito">
          <h4>Prescripciones:</h4>
        </div>
      </div>
    </div>
  </div>
</div>
