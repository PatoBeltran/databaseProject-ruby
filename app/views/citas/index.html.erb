<div class="row">
  <% if @citas.present? %>
    <% @citas.each do |cita| %>
    <div class="col-3 text-center pepito">
      <p>
      <%=link_to cita_path(Cita.find_by_sql("SELECT * FROM citas WHERE cid = '#{cita.cid}'")[0]) do %>
        <%= cita.fecha %>
      <% end %>
      </p>
      <div class="row">
        <div class="col-6 text-center pepito">
          <%= cita.nombre %> <%= cita.apellido %>
        </div>
        <div class="col-6 text-center pepito">
          <%= cita.telefono %>
        </div>
        <div class="col-12 text-center pepito">
          <%= cita.comentario %>
        </div>
      </div>
    </div>
    <% end %>
  <% else %>
    <p class="col-12"><h3>No hay citas.</p>
  <% end %>
</div>

